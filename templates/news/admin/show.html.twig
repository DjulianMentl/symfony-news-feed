{% extends 'base.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
    </style>

    <div class="example-wrapper">
        <h1>{{ news.date|date("Y-m-d H:i:s") }} — {{ news.title }}</h1>

        {% if news.image %}
            <div>
                <img src="{{ asset('images/' ~ news.image) }}" alt="Картинка новости">
            </div>
        {% endif %}

        <div>
            {{ news.text }}
        </div>

        <div>
            <a href="{{ path('admin_show_all_news') }}">Назад</a>
            <a href="{{ path('news_edit', {'id': news.id}) }}">Редактировать</a>

            {{ include('news/admin/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
