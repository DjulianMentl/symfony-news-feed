{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Авторизация</h1>
    {% if error %}
        <div class="my-5 text-bg-danger h3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="mt-5 mb-3">
            <label class="form-label" for="username">Email:</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
        </div>
        <div class="my-3">
            <label class="form-label" for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="_password"/>
        </div>

        <input type="hidden" name="_target_path" value="/admin/news"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="mt-3 mb-5 btn btn-light btn-outline-dark" type="submit">Войти</button>
    </form>
</div>
{% endblock %}
